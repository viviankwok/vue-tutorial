{"ast":null,"code":"import Header from \"./components/Header.vue\";\nimport Tasks from \"./components/Tasks.vue\";\nimport AddTask from \"./components/AddTask.vue\";\nexport default {\n  name: \"App\",\n  components: {\n    Header,\n    Tasks,\n    AddTask\n  },\n\n  data() {\n    return {\n      tasks: [],\n      showAddTask: false\n    };\n  },\n\n  methods: {\n    toggleAddTask() {\n      this.showAddTask = !this.showAddTask;\n    },\n\n    async addTask(task) {\n      const res = await fetch(\"/api/tasks\", {\n        method: \"POST\",\n        header: {\n          \"Content-type\": \"application/json\"\n        }\n      });\n      this.tasks = [...this.tasks, task];\n    },\n\n    deleteTask(id) {\n      if (confirm(\"Are you sure?\")) {\n        this.tasks = this.tasks.filter(task => task.id !== id);\n      }\n    },\n\n    toggleReminder(id) {\n      this.tasks = this.tasks.map(task => task.id === id ? { ...task,\n        reminder: !task.reminder\n      } : task);\n    },\n\n    async fetchTasks() {\n      const res = await fetch(\"api/tasks\");\n      const data = await res.json();\n      return data;\n    },\n\n    async fetchTask(id) {\n      const res = await fetch(`api/tasks/${id}`);\n      const data = await res.json();\n      return data;\n    }\n\n  },\n\n  async created() {\n    this.tasks = await this.fetchTasks();\n  }\n\n};","map":{"version":3,"mappings":"AAmBA,OAAOA,MAAP,MAAmB,yBAAnB;AACA,OAAOC,KAAP,MAAkB,wBAAlB;AACA,OAAOC,OAAP,MAAoB,0BAApB;AAEA,eAAe;EACbC,IAAI,EAAE,KADO;EAEbC,UAAU,EAAE;IAAEJ,MAAF;IAAUC,KAAV;IAAiBC;EAAjB,CAFC;;EAGbG,IAAI,GAAG;IACL,OAAO;MACLC,KAAK,EAAE,EADF;MAELC,WAAW,EAAE;IAFR,CAAP;EAID,CARY;;EAUbC,OAAO,EAAE;IACPC,aAAa,GAAG;MACd,KAAKF,WAAL,GAAmB,CAAC,KAAKA,WAAzB;IACD,CAHM;;IAIP,MAAMG,OAAN,CAAcC,IAAd,EAAoB;MAClB,MAAMC,GAAE,GAAI,MAAMC,KAAK,CAAC,YAAD,EAAe;QACpCC,MAAM,EAAE,MAD4B;QAEpCC,MAAM,EAAE;UAAE,gBAAgB;QAAlB;MAF4B,CAAf,CAAvB;MAIA,KAAKT,KAAL,GAAa,CAAC,GAAG,KAAKA,KAAT,EAAgBK,IAAhB,CAAb;IACD,CAVM;;IAWPK,UAAU,CAACC,EAAD,EAAK;MACb,IA